{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"], 
    "baseUrl": "src", // moved inside compilerOptions
    "jsx": "preserve",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "incremental": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["react", "@types/react", "@types/react-dom", "@types/node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
